color body color13 default "[ ][*][^*]*[*][ ]?" # more emoticon?
color body color13 default "[;:][)(|]" # emoticons
color body color13 default "[;:][-o][)/(|]" # emoticons

# Code highlighting
color body color5 default "\`[^\`]*\`"
