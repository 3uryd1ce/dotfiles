# get that status bar padding out of here
set statusbar-h-padding 0
set statusbar-v-padding 0

# except for page padding
set page-padding 20

# sets the clipboard to the actual good one
set selection-clipboard clipboard

# save pinky finger for half-scrolls
map u scroll half-up
map d scroll half-down

# pages on both left and right, like a book
map D toggle_page_mode

# reload, good if you're editing a pdf and need to see changes
map r reload

# rotate document 90 degrees clockwise
map R rotate

# invert colors
map i recolor

# print
map p print
