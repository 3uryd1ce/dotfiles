# essentially, anything too simple to warrant its own shell script

anonread() {
  anonftp -o - "$1" | zathura -
}

aprv() {
  apr -S "$(uname -m)" any="$1"
}

cht() {
  ftp -U 'curl' -VMo - "https://cht.sh/$1"
}

grabipv4() {
  ipv4="$(host -t A "$1")"
  echo "${ipv4##*address }"
}

grabipv6() {
  ipv6="$(host -t AAAA "$1")"
  echo "${ipv6##*address }"
}

ipinf() {
  ftp -VMo - "https://ipinfo.io/$1"
}

unlockhdd() {
  priv bioctl -c C -l "$1" softraid0
}
