# essentially, anything too simple to warrant its own shell script

anonread() {
  anonftp -o - "$1" | zathura -
}

aprv() {
  apr -S "$(uname -m)" any="$1"
}

cht() {
  curl "cht.sh/$1"
}

grabipv4() {
  ipv4=$(host -t A "$1")
  echo "${ipv4##*address }"
}

grabipv6() {
  ipv6=$(host -t AAAA "$1")
  echo "${ipv6##*address }"
}

unlockhdd() {
  priv bioctl -c C -l "$1" softraid0
}
