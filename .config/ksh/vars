# use vim if it's installed, vi otherwise
if [ -x "$(command -v -- 'nvim')" ]; then
  EDITOR='nvim'
else
  EDITOR='vi'
fi

# use colorls if it's installed, ls otherwise
if [ -x "$(command -v -- 'colorls')" ]; then
  ls='colorls'
else
  ls='ls'
fi

# out of necessity, some variables must be here (i.e. since EDITOR is
# defined here due to appearing in the 'aliases' + 'functions'
# files, all variables related to it must be here, too).
export \
  FCEDIT="${EDITOR}" \
  VISUAL="${EDITOR}"
