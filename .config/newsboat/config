save-path "~/books/newsboat/"

bind-key j down
bind-key k up
bind-key j next articlelist
bind-key k prev articlelist
bind-key J next-feed articlelist
bind-key K prev-feed articlelist
bind-key G end
bind-key g home
bind-key d pagedown
bind-key u pageup
bind-key l open
bind-key h quit
bind-key a toggle-article-read
bind-key n next-unread
bind-key N prev-unread
bind-key U show-urls
bind-key ^B bookmark
bind-key x delete-article

unbind-key p

color listnormal red default
color listfocus green default
color listnormal_unread cyan default
color listfocus_unread green default
color info red default
color article default default

browser "firefox"
player "mpv"
macro , open-in-browser
macro t set browser "youtube-dl"; open-in-browser ; set browser "firefox"
macro a set browser "youtube-dl -x -f bestaudio/best"; open-in-browser ; set browser "firefox"
macro v set browser "mpv"; open-in-browser ; set browser "firefox"
macro l set browser "mpv --no-video --speed=1"; open-in-browser ; set browser "firefox"
macro c set browser "printf '%u' | xclip -selection clipboard" ; open-in-browser ; set browser "firefox"

reload-threads 20
cleanup-on-quit yes
text-width 72
cache-file ~/.config/newsboat/cache.db
