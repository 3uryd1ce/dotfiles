unbind-key p

bind-key G  end
bind-key J  next-feed articlelist
bind-key K  prev-feed articlelist
bind-key N  prev-unread
bind-key U  show-urls
bind-key ^B bookmark
bind-key a  toggle-article-read
bind-key d  pagedown
bind-key g  home
bind-key h  quit
bind-key j  down
bind-key j  next articlelist
bind-key k  prev articlelist
bind-key k  up
bind-key l  open
bind-key n  next-unread
bind-key u  pageup
bind-key x  delete-article

browser "${BROWSER}"

cache-file "~/.config/newsboat/cache.db"

cleanup-on-quit yes

color article           default default
color info              magenta default
color listfocus         yellow  default
color listfocus_unread  yellow  default
color listnormal        green   default
color listnormal_unread cyan    default

macro , open-in-browser
# download (a)udio
macro a set browser "youtube-dl -x -f bestaudio/best"; open-in-browser; set browser "${BROWSER}"
# (c)opy URL
macro c set browser "printf '%s' '%u' | xclip -selection clipboard"; open-in-browser ; set browser "${BROWSER}"
# (l)isten
macro l set browser "mpv --no-video --speed=1"; open-in-browser; set browser "${BROWSER}"
# download (v)ideo
macro v set browser "youtube-dl"; open-in-browser; set browser "${BROWSER}"
# (w)atch
macro w set browser "mpv"; open-in-browser; set browser "${BROWSER}"

player "mpv"

reload-threads 20

save-path "~/books/newsboat/"

text-width 72
