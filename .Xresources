! gruvbox
! https://github.com/morhetz/gruvbox
*.color0: #fbf1c7
*.color1: #cc241d
*.color2: #98971a
*.color3: #d79921
*.color4: #458588
*.color5: #b16286
*.color6: #689d6a
*.color7: #7c6f64
*.color8: #928374
*.color9: #9d0006
*.color10: #79740e
*.color11: #b57614
*.color12: #076678
*.color13: #8f3f71
*.color14: #427b58
*.color15: #3c3836
*.background: #fbf1c7
*.foreground: #282828

st.font: monospace:size=12

! eye candy for non-{GTK,QT} applications
Xft.antialias: 1
Xft.autohint: 0
Xft.embeddedbitmap: 0
Xft.hinting: 1
Xft.hintstyle: hintslight
Xft.rgba: rgb
Xft.scalable: 1

! 5 seconds after lock for DPMS standby
XLock.dpmsstandby: 5
! 2 min after lock for DPMS suspend
XLock.dpmssuspend: 120
! 10 min after lock for DPMS off
XLock.dpmsoff: 600

! TODO: figure out why xset(1) and ~/.local/share/fonts clash with one another
XLock.font: -xos4-terminus-medium-r-normal--24-240-72-72-c-120-iso10646-1
XLock.planfont: -xos4-terminus-medium-r-normal--18-180-72-72-c-100-iso10646-1

XLock.usefirst: True
XLock.mode: blank
XLock.erasemode: no_fade
XLock.description:
XLock.info:
XLock.validate:
XLock.invalid:
XLock.echokeys: True
XLock.echokey: *
XLock.sound: False
XLock.timeelapsed: True
XLock.username:
XLock.password: password:
XLock.foreground: #282828
XLock.background: #fbf1c7

! sets up xidle to execute lockscreen script after 90 seconds
XIdle.program: .local/bin/lockscreen
XIdle.timeout: 90
XIdle.position: no
