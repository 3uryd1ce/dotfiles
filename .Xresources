! pywal
#include ".cache/wal/colors.Xresources"

! URxvt
URxvt.font: xft:monospace:size=14
URxvt.scrollBar: false

! eye candy for non-{GTK,QT} applications
Xft.antialias:      1
Xft.autohint:       0
Xft.embeddedbitmap: 0
Xft.hinting:        0
Xft.hintstyle:      hintnone
Xft.rgba:           rgb
Xft.scalable:       0

! 5 seconds after lock for DPMS standby
XLock.dpmsstandby: 5
! 2 min after lock for DPMS suspend
XLock.dpmssuspend: 120
! 10 min after lock for DPMS off
XLock.dpmsoff: 600

XLock.usefirst: True
XLock.mono: True
XLock.mode: blank
XLock.erasemode: no_fade
XLock.description:
XLock.info:
XLock.validate:
XLock.invalid:
XLock.echokeys: True
XLock.echokey: *
XLock.sound: False
XLock.timeelapsed: True
XLock.username:
XLock.password: password:

! sets up xidle to execute lockscreen script after 90 seconds
XIdle.program: .local/bin/lockscreen
XIdle.timeout: 90
