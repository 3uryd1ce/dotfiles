! pywal
#include ".cache/wal/colors.Xresources"

! eye candy for non-{GTK,QT} applications
Xft.antialias: 1
Xft.autohint:  0
Xft.hinting:   1
Xft.hintstyle: hintslight
Xft.lcdfilter: lcddefault
Xft.rgba:      rgb

! sets up xidle to execute slock instead of xlock after 90 seconds,
! turns off screen
XIdle.program: /usr/local/bin/slock xset dpms force off
XIdle.timeout: 90
