" indents intelligently based on context
set autoindent
" tabs are tabs
set noexpandtab
" use extended regular expressions
set extended
" case-insensitive search, unless an uppercase letter is used
set iclower
" enable horizontal scrolling
set leftright
" number lines
set number
" print helpful messages (e.g., 4 lines yanked)
set report=1
" display row/column info
set ruler
" incremental search
set searchincr
" autoindent width = 4 spaces
set shiftwidth=4
" show matching parens, braces, etc
set showmatch
" display current mode (insert/normal)
set showmode
" tab width = 4 spaces
set tabstop=4
" display all error messages
set verbose
