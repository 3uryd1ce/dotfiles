set -e


if [ -x "$(command -v -- 'doas')" ]; then
  alias priv='doas '

elif [ -x "$(command -v -- 'sudo')" ]; then
  alias priv='sudo '

fi


err() {
  printf '%s\n' "$*" >&2
  exit 1
}


usage() {
  err "usage:
${0##*/} [target] [options]"
}


nsc() {
  priv nmap -Av --osscan-limit \
    -oA "${TMPDIR}/nmap-$(date '+%F')" "$@"
}


fix_perms() {
  readonly unpriv_user="${LOGNAME}"

  priv chown -R -- "${unpriv_user}:${unpriv_user}" "${TMPDIR}"

  find "${TMPDIR}"                                    \
  \( -type f ! -perm 600 -exec chmod 600 '{}' + \) -o \
  \( -type d ! -perm 700 -exec chmod 700 '{}' + \)
}


[ -x "$(command -v -- 'nmap')" ] || err 'nmap not found in PATH or not executable.'
[ -z "$1" ] && usage

TMPDIR="$(mktemp -d)"
readonly TMPDIR

nsc "$@" || err 'Unable to scan target.'
fix_perms || err 'Unable to fix permissions.'

echo "Scan finished, results available in ${TMPDIR}."
