set -e
. "${HOME}/.local/bin/libr"

# (n)etwork (sc)anner
# creates dir, places nmap scan results in dir

# usage: nsc [target] [options]

sec="${HOME}/sec"

create_workdir() {
  mkdir -p "${sec}/$1/nmap"
  export workdir="${sec}/$1/nmap"
}

nsc() {
  priv nmap -A -v -p 0-65535 --osscan-limit \
    --privileged -oA "${workdir}/nmap-$(today)" "$1"
}

fix_perms() {
  priv chown -R ashlen:ashlen "${sec}"
}

main() {
  create_workdir "$1" || err "Couldn't create directory, do you have permission?"
  nsc "$@" || err "Couldn't scan target."
  fix_perms || err "Unable to fix permissions."
}

main "$@" || err "nsc failed."
