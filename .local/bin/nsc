# check that the library file is readable. if it is, source it so its
# functions are available. if not, exit due to potentially unpredictable
# behavior.
library="${HOME}/.local/bin/common.sh"
if [ -r "${library}" ]; then
  . "${library}"
else
  cat >&2 <<EOF
${library} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF
  exit 1
fi

# (n)etwork (sc)anner
# creates dir, places nmap scan results in dir

# usage: nsc [target] [options]

create_workdir() {
  mkdir -p "${workdir}"
}

nsc() {
  priv nmap -Av -p 0-65535 --osscan-limit \
    --privileged -oA "${workdir}/nmap-$(today)" "$1"
}

fix_perms() {
  unpriv_user="$(id -un)"
  priv chown -R "${unpriv_user}:${unpriv_user}" "${sec}"
}

main() {
  arguments_needed=1
  usage_details="${0##*/} requires at least ${arguments_needed} argument(s).

usage:
${0##*/} [target] [options]"
  arg_ge "$@"
  sec="${HOME}/sec"
  workdir="${sec}/$1/nmap"
  create_workdir "$1" || err 'Unable to create directory, do you have permission?'
  nsc "$@" || err 'Unable to scan target.'
  fix_perms || err 'Unable to fix permissions.'
}

main "$@"
