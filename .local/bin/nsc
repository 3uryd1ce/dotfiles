set -e

# check that LIBRARY is readable. if it is, source it so its
# functions are available. if not, exit due to potentially unpredictable
# behavior.
readonly LIBRARY="${HOME}/.local/bin/common.sh"

if [ -r "${LIBRARY}" ]; then
  . "${LIBRARY}"

else
  cat >&2 <<EOF
${LIBRARY} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF

  exit 1

fi


usage() {
  cat >&2 <<EOF
${0##*/} requires at least ${args_needed} argument(s).

usage:
${0##*/} [target] [options]
EOF

  exit 1
}


nsc() {
  priv nmap -Av --osscan-limit --privileged \
  -oA "${tmpdir}/nmap-$(date '+%F')" "$@"
}


fix_perms() {
  readonly unpriv_user="${LOGNAME}"

  priv chown -R -- "${unpriv_user}:${unpriv_user}" "${tmpdir}"

  find "${tmpdir}"                                    \
  \( -type f ! -perm 600 -exec chmod 600 '{}' + \) -o \
  \( -type d ! -perm 700 -exec chmod 700 '{}' + \)
}


prereqs() {
  echo 'nmap' | check_deps

  readonly args_needed=1
  [ "$#" -ge "${args_needed}" ] || usage
}


prereqs "$@"

tmpdir="$(mktemp -d)"
readonly tmpdir

nsc "$@" || err 'Unable to scan target.'
fix_perms || err 'Unable to fix permissions.'

echo "Scan finished, results available in ${tmpdir}."
