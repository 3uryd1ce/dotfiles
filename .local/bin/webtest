set -e


err() {
  printf '%s\n' "$*" >&2
  exit 1
}


usage() { err "usage: ${0##*/} [domain] [md dir] [srv dir]"; }


# instead of remembering/accounting for two different forms of privilege
# elevation, one is assigned to the alias 'priv.'
if [ -x "$(command -v 'doas')" ]; then
  alias priv='doas '

elif [ -x "$(command -v 'sudo')" ]; then
  alias priv='sudo '

fi


# TODO: index.md could be a variable instead of hard-coded
gen_site() {
  ssg6 "${MARKDOWNDIR}" "${HTMLDIR}" "${UNPRIV_USER}" \
  "${SITE}" >/dev/null 2>&1

  rssg "${MARKDOWNDIR}/index.md" "Newsletter - ${SITE##*//}" \
    > "${HTMLDIR}/rss.xml" 2>/dev/null
}


sync_site() {
  # can't call this in the form 'priv sync_site'. thus, a heredoc is needed.
  priv /usr/bin/env sh -- <<EOF
rm -rf -- ${SRVDIR:?}
mkdir -p -- ${SRVDIR}
mv -- ${HTMLDIR}/* ${SRVDIR}/
rcctl reload httpd >/dev/null
EOF
}


cleanup() {
  rm -rf -- "${HTMLDIR:?}"
}


umask 022
[ "$(uname)" = 'OpenBSD' ] || err "${0##*/} only supports OpenBSD."

for pos_par in "$1" "$2" "$3"; do
  [ -z "${pos_par}" ] && usage
done

readonly SITE="$1"
readonly MARKDOWNDIR="$2"
readonly SRVDIR="$3"

HTMLDIR="$(mktemp -d)"
readonly HTMLDIR

readonly UNPRIV_USER="${LOGNAME}"

if ! gen_site; then
  cleanup
  err 'Unable to generate site.'

elif ! sync_site; then
  cleanup
  err 'Unable to sync web server.'

else
  cleanup
  echo 'Web server synced.'

fi
