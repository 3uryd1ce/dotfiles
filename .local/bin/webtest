# check that the library file is readable. if it is, source it so its
# functions are available. if not, exit due to potentially unpredictable
# behavior.
library="${HOME}/.local/bin/common.sh"
if [ -r "${library}" ]; then
  . "${library}"
else
  cat >&2 <<EOF
${library} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF
  exit 1
fi

gen_site() {
  markdowndir="${HOME}/builds/website_md"
  rm -rf "${webdir:?}"
  mkdir -p "${webdir}"
  ssg6 "${markdowndir}" "${webdir}" 'Ashlen' \
    'https://amissing.link' >/dev/null 2>&1
  rssg "${markdowndir}/articles.md" 2>/dev/null \
    'Newsletter - amissing.link' > "${webdir}/rss.xml"
}

sync_site() {
  srvdir='/var/www/htdocs/aml'
  unpriv_user="$(id -un)"
  # oddly, can't call this in the form 'priv sync_site' in
  # main(). thus, a heredoc is needed.
  priv /usr/bin/env sh <<EOF
rm -rf ${srvdir:?}
mkdir -p ${srvdir}
mv ${webdir}/* ${srvdir}/
find ${srvdir} \( -type f ! -perm 644 -exec chmod 644 '{}' \; \) \
  -o \( -type d ! -perm 755 -exec chmod 755 '{}' \; \)
chown -R ${unpriv_user}:${unpriv_user} ${srvdir}
rcctl reload httpd >/dev/null
EOF
}

# TODO: make this script more flexible.
#
# right now this script uses hard-coded variables.
# perhaps make use of positional parameters or a conf file instead?
main() {
  webdir="${HOME}/builds/website"
  gen_site || err 'Unable to generate site.'
  sync_site || err 'Unable to sync web server.'
  echo 'Web server synced.'
}

main
