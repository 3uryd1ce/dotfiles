set -e

# check that LIBRARY is readable. if it is, source it so its
# functions are available. if not, exit due to potentially unpredictable
# behavior.
readonly LIBRARY="${HOME}/.local/bin/common.sh"

if [ -r "${LIBRARY}" ]; then
  . "${LIBRARY}"

else
  cat >&2 <<EOF
${LIBRARY} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF

  exit 1

fi


usage() { err "usage: ${0##*/} [domain] [md dir] [srv dir]"; }


# TODO: index.md could be a variable instead of hard-coded
gen_site() {
  ssg6 "${MARKDOWNDIR}" "${HTMLDIR}" "${UNPRIV_USER}" \
  "${SITE}" >/dev/null 2>&1

  rssg "${MARKDOWNDIR}/index.md" "Newsletter - ${SITE##*//}" \
    > "${HTMLDIR}/rss.xml" 2>/dev/null
}


sync_site() {
  # can't call this in the form 'priv sync_site'. thus, a heredoc is needed.
  priv /usr/bin/env sh -- <<EOF
rm -rf -- ${SRVDIR:?}
mkdir -p -- ${SRVDIR}
mv -- ${HTMLDIR}/* ${SRVDIR}/
rcctl reload httpd >/dev/null
EOF
}


cleanup() {
  rm -rf -- "${HTMLDIR:?}"
}


prereqs() {
  [ "$(uname)" = 'OpenBSD' ] || err "${0##*/} only supports OpenBSD."

  readonly ARGS_NEEDED=3
  [ "$#" = "${ARGS_NEEDED}" ] || usage
}


umask 022
prereqs "$@"

readonly SITE="$1"
readonly MARKDOWNDIR="$2"
readonly SRVDIR="$3"

HTMLDIR="$(mktemp -d)"
readonly HTMLDIR

readonly UNPRIV_USER="${LOGNAME}"

if ! gen_site; then
  cleanup
  err 'Unable to generate site.'

elif ! sync_site; then
  cleanup
  err 'Unable to sync web server.'

else
  cleanup
  echo 'Web server synced.'

fi
