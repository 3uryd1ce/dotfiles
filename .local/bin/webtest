# needs root privileges
set -e

markdowndir=/home/ashlen/builds/website_md
webdir=/home/ashlen/builds/website
srvdir=/var/www/htdocs/aml
ssg=/home/ashlen/.local/bin/ssg5
rssg=/home/ashlen/.local/bin/rssg

sec_print() {
  printf "%s\\n" "$@"
}

err() {
  sec_print "[$(date +'%Y-%m-%d|%H:%M:%S')]: $*" >&2
  exit 1
}

must_be_root() {
  if [ "$(id -u)" != 0 ]; then
    err "Execute $(basename "$0") with root privileges."
  fi
}

gen_site() {
  rm -f ${webdir}/.files
  ${ssg} ${markdowndir} ${webdir} "Ashlen" \
    "https://amissing.link" >/dev/null 2>&1
  ${rssg} ${markdowndir}/articles.md >/dev/null 2>&1 \
    "Newsletter - amissing.link" > "${webdir}/rss.xml"
  chown ashlen:ashlen ${webdir}/.files
}

sync_and_chmod() {
  openrsync -r --delete ${webdir}/ ${srvdir}/
  find ${srvdir} -type f ! -perm 644 -exec chmod 644 "{}" \; >/dev/null 2>&1
  find ${srvdir} -type d ! -perm 755 -exec chmod 755 "{}" \; >/dev/null 2>&1
  rcctl reload httpd >/dev/null
  sec_print "Web server synced."
}

webtest() {
  must_be_root
  gen_site || err "Couldn't generate site."
  sync_and_chmod || err "Unable to sync web server."
}

webtest || err "Webtest failed."
