# WHATSOEVER RESULTING FROM LOSS OF USE, DATA OR PROFITS, WHETHER IN AN
# ACTION OF CONTRACT, NEGLIGENCE OR OTHER TORTIOUS ACTION, ARISING OUT OF
# OR IN CONNECTION WITH THE USE OR PERFORMANCE OF THIS SOFTWARE.

# check that the library file is readable. if it is, source it so its
# functions are available. if not, exit due to potentially unpredictable
# behavior.
readonly library="${HOME}/.local/bin/common.sh"

if [ -r "${library}" ]; then
  . "${library}"

else
  cat >&2 <<EOF
${library} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF

  exit 1

fi

usage() { err "usage: ${0##*/} [domain] [md dir] [srv dir]"; }

# TODO: index.md could be a variable instead of hard-coded
gen_site() {
  ssg6 "${markdowndir}" "${htmldir}" "${unpriv_user}" \
    "${site}" >/dev/null 2>&1

  rssg "${markdowndir}/index.md" 2>/dev/null \
    "Newsletter - ${site##*//}" > "${htmldir}/rss.xml"
}

sync_site() {
  # can't call this in the form 'priv sync_site'. thus, a heredoc is needed.
  priv /usr/bin/env sh -- <<EOF
rm -rf -- ${srvdir:?}
mkdir -p -- ${srvdir}
mv -- ${htmldir}/* ${srvdir}/
rcctl reload httpd >/dev/null
EOF
}

cleanup() {
  rm -rf -- "${htmldir:?}"
}

prereqs() {
  if ! [ "$(uname)" = 'OpenBSD' ]; then
    err "${0##*/} only supports OpenBSD."
  fi

  readonly args_needed=3
  [ "$#" = "${args_needed}" ] || usage
}

umask 022
prereqs "$@"

readonly site="$1"
readonly markdowndir="$2"
readonly srvdir="$3"

htmldir="$(mktemp -d)"
readonly htmldir

readonly unpriv_user="${LOGNAME}"

if ! gen_site; then
  cleanup
  err 'Unable to generate site.'

elif ! sync_site; then
  cleanup
  err 'Unable to sync web server.'

else
  cleanup
  echo 'Web server synced.'

fi
