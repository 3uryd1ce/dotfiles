set -e
. "${HOME}/.local/bin/libr"

markdowndir="${HOME}/builds/website_md"
webdir="${HOME}/builds/website"
srvdir="/var/www/htdocs/aml"

gen_site() {
  rm -rf "${webdir:?}"
  mkdir -p "${webdir}"
  ssg5 "${markdowndir}" "${webdir}" "Ashlen" \
    "https://amissing.link" >/dev/null 2>&1
  rssg "${markdowndir}/articles.md" 2>/dev/null \
    "Newsletter - amissing.link" > "${webdir}/rss.xml"
}

sync_site() {
  # oddly, can't call this in the form 'priv sync_site' in
  # webtest(). thus, a heredoc is needed.
  priv /usr/bin/env sh <<EOF
  rm -rf ${srvdir:?}
  mkdir -p ${srvdir}
  mv ${webdir}/* ${srvdir}/
  find ${srvdir} -type f ! -perm 644 -exec chmod 644 "{}" \\; >/dev/null 2>&1
  find ${srvdir} -type d ! -perm 755 -exec chmod 755 "{}" \\; >/dev/null 2>&1
  chown -R ashlen:ashlen ${srvdir}
  rcctl reload httpd >/dev/null
EOF
}

webtest() {
  gen_site || err "Couldn't generate site."
  sync_site || err "Unable to sync web server."
  printf "%s\\n" "Web server synced."
}

webtest || err "Webtest failed."
