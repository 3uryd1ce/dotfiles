set -e


err() {
  printf '%s\n' "$*" >&2
  exit 1
}


usage() {
  err "usage: ${0##*/} [domain] [markdown directory] [server directory]

-i: Specify the name of an alternate index file (by default, INDEX is
    set to index.md). It must be present in the provided markdown
    directory, otherwise ${0##*/} will fail."
}


gen_site() {
  : "${INDEX:=index.md}"
  [ -r "${MARKDOWNDIR}/${INDEX}" ] || err "${MARKDOWNDIR}/${INDEX} is not readable."
  [ -f "${MARKDOWNDIR}/${INDEX}" ] || err "${MARKDOWNDIR}/${INDEX} is not a file."

  ssg6 "${MARKDOWNDIR}" "${HTMLDIR}" "${UNPRIV_USER}" \
    "${SITE}" >/dev/null 2>&1

  rssg "${MARKDOWNDIR}/${INDEX}" "Newsletter - ${SITE##*//}" \
    > "${HTMLDIR}/rss.xml" 2>/dev/null
}


sync_site() {
  doas /usr/bin/env sh <<EOF
rm -rf -- ${SRVDIR:?}
mkdir -p -- ${SRVDIR}
mv -- ${HTMLDIR}/* ${SRVDIR}/
rcctl reload httpd >/dev/null
EOF
}


cleanup() {
  rm -rf -- "${HTMLDIR:?}"
}


while getopts i:h opt; do

  case "${opt}" in
    i)     readonly INDEX="${OPTARG##*/}" ;;
    'h'|*) usage                          ;;
  esac

done

shift $((OPTIND - 1))

umask 022
[ "$(uname)" = 'OpenBSD' ] || err "${0##*/} only supports OpenBSD."

for pos_par in "$1" "$2" "$3"; do
  [ -z "${pos_par}" ] && usage
done

readonly SITE="$1"
readonly MARKDOWNDIR="$2"
readonly SRVDIR="$3"

HTMLDIR="$(mktemp -d)"
readonly HTMLDIR

readonly UNPRIV_USER="${LOGNAME}"

if ! gen_site; then
  cleanup
  err 'Unable to generate site.'

elif ! sync_site; then
  cleanup
  err 'Unable to sync web server.'

else
  cleanup
  echo 'Web server synced.'

fi
