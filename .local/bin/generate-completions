use v5.36;
use autodie;

# Core.
use English;
use File::Basename qw(fileparse);
use Getopt::Std;

# Personal.
use Anthesis::OpenBSD qw(pledge_or_die);

sub usage {
	my $program_name = fileparse $PROGRAM_NAME;
	die <<EOF;
$program_name [-h] [-t completion_type]
EOF
}

our ( $opt_h, $opt_t );
getopts('ht:');

usage if $opt_h;

pledge_or_die qw(stdio);

my $completion_type = $opt_t;
my %completions;

sub generate_man_completions;

if ( $completion_type eq 'man' ) {
	generate_man_completions
}

say join "\n", sort keys %completions;

# Input must be in apropos(1) format.
sub generate_man_completions {
	while ( my $line = <STDIN> ) {
		chomp $line;

		# We only need up to before the first parenthesis, as we only care about the
		# names of the man pages.
		$line = substr $line, 0, index( $line, '(' );

		# Every name that is present for a given man page is added to an array that
		# will be looped through.
		$line =~ tr/,//d;
		my @man_pages_in_line = split ' ', $line;

		# Each name is added as a new key the first time it is encountered.
		while ( my $man_page = shift @man_pages_in_line ) {
			$completions{$man_page}++;
		}
	}
}
