set -e

sec_print() {
  printf "%s\\n" "$@"
}

err() {
  sec_print "[$(date +'%Y-%m-%d|%H:%M:%S')]: $*" >&2
  exit 1
}

lbar() {
  lemonbar-xft -f sans-14 -f "Noto Sans CJK JP-14" -p -d
}

lbar || err "lbar encountered a problem."
