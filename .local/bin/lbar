set -e

readonly LIBRARY="${HOME}/.local/bin/common.sh"

if [ -r "${LIBRARY}" ]; then
  . "${LIBRARY}"

else
  cat >&2 <<EOF
${LIBRARY} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF

  exit 1

fi

check_grafix
echo 'lemonbar-xft' | check_deps

lemonbar-xft -f sans-11 -f 'Noto Sans CJK JP-11' -pd
