set -e
[ -f "${HOME}/.local/bin/common.sh" ] \
  && . "${HOME}/.local/bin/common.sh"

main() {
  lemonbar-xft -f sans-14 -f "Noto Sans CJK JP-14" -p -d
}

main || err "lbar encountered a problem."
