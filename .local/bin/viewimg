# check that LIBRARY is readable. if it is, source it so its
# functions are available. if not, exit due to potentially unpredictable
# behavior.
readonly LIBRARY="${HOME}/.local/bin/common.sh"

if [ -r "${LIBRARY}" ]; then
  . "${LIBRARY}"

else
  cat >&2 <<EOF
${LIBRARY} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF

  exit 1

fi


usage() {
  cat >&2 <<EOF
${0##*/} requires ${args_needed} argument(s).

usage:
${0##*/} [URL]
EOF

  exit 1
}


viewimg() {
  filename="$(mktemp)"
  readonly filename

  ftp -nU '' -o "${filename}" -- "$1"

  sxiv -- "${filename}"
}


prereqs() {
  check_grafix

  check_deps <<'EOF'
ftp
sxiv
EOF

  readonly args_needed=1
  [ "$#" = "${args_needed}" ] || usage
}


prereqs "$@"

viewimg "$1" >/dev/null 2>&1

wait
rm -- "${filename}"
