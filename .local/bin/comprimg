set -e


err() {
	printf '%s\n' "$*" >&2
	exit 1
}


warn() {
	printf '%s\n' "$*" >&2
}


usage() {
	err "${0##*/} is for losslessly compressing images. It compresses given
files in place with the appropriate tool.

${0##*/} [inpic] ..."
}


check_deps() {
	while read -r dependency; do

		[ -x "$(command -v -- "${dependency}")" ] \
			|| err "${dependency} not found in PATH or not executable."

	done
}


[ -z "$*" ] && usage


check_deps <<'EOF'
jpegoptim
optipng
EOF


while [ -n "$*" ]; do

	case "$(file -ib -- "$1")" in
		image/jpeg) jpegoptim -s -- "$1" ;;
		image/png) optipng -strip all -fix -- "$1" ;;
		*) warn "$1 does not use a supported image format." ;;
	esac

	shift

done
