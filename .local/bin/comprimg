set -e

readonly PROGRAM_NAME="${0##*/}"

err() {
	printf '%s\n' "$*" >&2
	exit 1
}

warn() {
	printf '%s\n' "$*" >&2
}

usage() {
	cat <<EOF
${PROGRAM_NAME} is for losslessly compressing images. It compresses
given files in place with the appropriate tool.

${PROGRAM_NAME} [inpic] ...
EOF
}


readonly DEPENDENCIES='jpegoptim
optipng'

echo "${DEPENDENCIES}" | while read -r dependency; do
	command -v -- "${dependency}" >/dev/null 2>&1 ||
		err "${dependency} not found in PATH."
done


[ -n "$*" ] || usage

while [ -n "$*" ]; do

	case "$(file -ib -- "$1")" in
		image/jpeg) jpegoptim -s -- "$1" ;;
		image/png) optipng -strip all -fix -- "$1" ;;
		*) warn "$1 does not use a supported image format." ;;
	esac

	shift

done
