set -e

readonly LIBRARY="${HOME}/.local/bin/common.sh"

if [ -r "${LIBRARY}" ]; then
  . "${LIBRARY}"

else
  cat >&2 <<EOF
${LIBRARY} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF

  exit 1

fi


usage() {
  cat >&2 <<EOF
${0##*/} requires ${args_needed} argument(s).

usage:
${0##*/} [command] [dir for fzf]
EOF

  exit 1
}


prereqs() {
  readonly args_needed=2
  [ "$#" -eq "${args_needed}" ] || usage

  check_deps <<EOF
fzf
$1
EOF

  [ -r "$2" ] || err "$2 is not readable."
  [ -d "$2" ] || err "$2 is not a directory."
}


prereqs "$@"

chosen_file="$( (cd "$2" && fzf) )"
readonly chosen_file

full_path_of_file="$(readlink -f -- "$2/${chosen_file}")"
readonly full_path_of_file

[ -n "${full_path_of_file}" ] || err 'A file must be chosen.'
[ -r "${full_path_of_file}" ] || err 'File not readable.'

"$1" "${full_path_of_file}"
