# simple script to update element-web when we try to launch it.

set -e

err() {
	printf '%s\n' "$*" >&2
	exit 1
}


check_deps() {
	while read -r dependency; do

		[ -x "$(command -v -- "${dependency}")" ] \
			|| err "${dependency} not found in PATH or not executable."

	done
}


launch_browser() {
	"${BROWSER}" -P "${BROWSER_PROFILE}" "${MATRIX_URI}"
}


: "${BROWSER:=firefox}"
: "${BROWSER_PROFILE:=matrix}"
: "${MATRIX_URI:=http://localhost:8080}"
: "${XDG_BIN_HOME:=${HOME}/.local/bin}"
: "${CHECK_SCRIPT:=${XDG_BIN_HOME}/check-elemweb}"


check_deps <<-EOF
	${BROWSER}
	${CHECK_SCRIPT}
EOF


# automatically check for a new version of element-web and update if a
# new version is found.
if "${CHECK_SCRIPT}"; then
	[ -n "${DISPLAY}" ] \
		&& [ -x "$(command -v 'notify-send')" ] \
		&& notify-send 'element-web updated, be sure to restart httpd(8) if needed.'
fi

launch_browser
