set -e

readonly LIBRARY="${HOME}/.local/bin/common.sh"

if [ -r "${LIBRARY}" ]; then
  . "${LIBRARY}"

else

  cat >&2 <<EOF
${LIBRARY} doesn't exist or isn't readable.
${0##*/} may not function correctly without it.
EOF

  exit 1

fi


usage() {
  cat >&2 <<EOF
${0##*/} requires ${args_needed} argument(s).

usage:
${0##*/} [image]
EOF

  exit 1
}


genfavi() {
  convert "$1" -background white             \
  \( -clone 0 -resize 16x16 -extent 16x16 \) \
  \( -clone 0 -resize 32x32 -extent 32x32 \) \
  \( -clone 0 -resize 48x48 -extent 48x48 \) \
  \( -clone 0 -resize 64x64 -extent 64x64 \) \
  -delete 0 -alpha off -colors 256 favicon.ico
}


prereqs() {
  echo 'convert' | check_deps

  readonly args_needed=1
  [ "$#" = "${args_needed}" ] || usage

  case "$(file -ib -- "$1")" in
    image/*) :                        ;; # images are OK to process
    *)       err "$1 isn't an image." ;;
  esac
}


prereqs "$@"

if genfavi "$1"; then
  cp 'favicon.ico' 'favicon.png'

else
  err 'Unable to generate favicon.'

fi
