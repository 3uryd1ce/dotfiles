set -e
library="${HOME}/.local/bin/common.sh"
if [ -r "${library}" ]; then
  . "${library}"
else
  cat >&2 <<EOF
${library} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF
  exit 1
fi

arguments_needed=2
compressor='bzip2'
compressor_args='-c'
uid="$(id -u)"
usage_details="${0##*/} requires ${arguments_needed} argument(s).

usage:
${0##*/} [backup target] [destination]"

# bkup [backup target] [destination]
bkup() {
  if [ "${uid}" = 0 ]; then
    dump -0auf - "$1" \
      | "${compressor}" ${compressor_args} \
      > "$2"
  elif alias | grep -qi priv; then
    priv dump -0auf - "$1" \
      | "${compressor}" ${compressor_args} \
      > "$2"
  else
    err 'Not running as root and unable to elevate privileges, exiting.'
  fi
}

# TODO: add a function to test validity of $1 and $2
main() {
  usage "$@"
  echo 'Dumping...'
  bkup "$1" "$2"
}

main "$@"
