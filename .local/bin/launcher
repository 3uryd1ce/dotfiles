# check that the library file is readable. if it is, source it so its
# functions are available. if not, exit due to potentially unpredictable
# behavior.
readonly library="${HOME}/.local/bin/common.sh"

if [ -r "${library}" ]; then
  . "${library}"

else
  cat >&2 <<EOF
${library} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF

  exit 1

fi

#-fn ## font used
#-nb ## normal background color
#-nf ## normal foreground color
#-sb ## selected background color
#-sf ## selected foreground color


launch() {
  dmenu_run -i -fn 'mono-20' \
  -nb "${color0:=#040516}"   \
  -nf "${color3:=#9974e7}"   \
  -sb "${color0:=#040516}"   \
  -sf "${color7:=#e0cef3}"
}


prereqs() {
  check_grafix
  echo 'dmenu_run' | check_deps
  import_colors_sh
}


prereqs
launch
