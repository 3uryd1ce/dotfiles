set -e
. "${HOME}/.local/bin/libr"

#-fn ## font used
#-nb ## normal background color
#-nf ## normal foreground color
#-sb ## selected background color
#-sf ## selected foreground color

launch() {
  dmenu_run -i \
    -fn "mono-20" \
    -nb "${color0}" \
    -nf "${color3}" \
    -sb "${color0}" \
    -sf "${color7}"
}

main() {
  import_colors
  launch || err "launch() failed."
}

main
