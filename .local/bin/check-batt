err() {
  printf '%s\n' "$*" >&2
  exit 1
}


check_deps() {
  while read -r dependency; do

    if [ -x "$(command -v -- "${dependency}")" ]; then
      continue

    else
      err "${dependency} not found in PATH or not executable."

    fi

  done
}


# if needed dependencies aren't available, exit.
check_deps <<'EOF'
apm
notify-send
EOF

# if A/C is connected, exit.
[ "$(apm -a)" = 1 ] && exit 0

# if battery is missing, exit.
batt_status="$(apm -b)"

case "${batt_status}" in
  4)   err "Battery status is 'absent.'"  ;;
  255) err "Battery status is 'unknown.'" ;;
esac

batt_percent="$(apm -l)"

if [ "${batt_percent}" -lt 20 ]; then
  # exporting ${DISPLAY} is needed for cron(8) jobs.
  [ -z "${DISPLAY}" ] && : "${DISPLAY:=:0}" && export DISPLAY

  notify-send -- "ðŸ”‹ Your device is at ${batt_percent}%!"

else
  exit 0

fi
