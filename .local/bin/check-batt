# OR IN CONNECTION WITH THE USE OR PERFORMANCE OF THIS SOFTWARE.

# check that the library file is readable. if it is, source it so its
# functions are available. if not, exit due to potentially unpredictable
# behavior.
readonly library="${HOME}/.local/bin/common.sh"
if [ -r "${library}" ]; then
  . "${library}"
else
  cat >&2 <<EOF
${library} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF
  exit 1
fi

handle_icons() {
  icons='/usr/local/share/icons/gnome/scalable'
  warning_icon="${icons}/status/battery-caution-symbolic.svg"
  if [ -r "${warning_icon}" ]; then
    ICONS='true'
  else
    unset "${icons}" "${warning_icon}"
    ICONS='false'
  fi
}

handle_prereqs() {
  check_deps <<'EOF'
apm
notify-send
EOF
  # if A/C is connected, exit.
  [ "$(apm -a)" = 1 ] && exit

  # if battery is missing, exit.
  batt_status="$(apm -b)"
  if [ "${batt_status}" = 4 ] || [ "${batt_status}" = 255 ]; then
    exit
  fi
}

set_display() {
  [ -z "${DISPLAY}" ] && export DISPLAY=:0
}

warn_user() {
  message="Charge your laptop, it's at ${batt_percent}%!"
  case "${ICONS}" in
    'true') notify-send -i "${warning_icon}" "${message}" ;;
    'false') notify-send "${message}"                     ;;
  esac
}

main() {
  handle_prereqs
  batt_percent="$(apm -l)"
  if [ "${batt_percent}" -lt 30 ]; then
    set_display
    handle_icons
    warn_user
  else
    exit
  fi
}

main
