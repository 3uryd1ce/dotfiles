# check that the library file is readable. if it is, source it so its
# functions are available. if not, exit due to potentially unpredictable
# behavior.
readonly library="${HOME}/.local/bin/common.sh"
if [ -r "${library}" ]; then
  . "${library}"
else
  cat >&2 <<EOF
${library} doesn't exist or isn't readable.
${0##*/} may not function correctly without it; exiting for safety.
EOF
  exit 1
fi

# assign an icon (or not) depending on whether the icon is readable.
#
# choose_icon() is here because an inability to locate an icon
# shouldn't be fatal. the user should still get a notification
# regardless.
choose_icon() {
  # these paths will likely differ between operating systems.
  icon_dir='/usr/local/share/icons/gnome/scalable'
  warning_icon="${icon_dir}/status/battery-caution-symbolic.svg"
  if [ -r "${warning_icon}" ]; then
    ICONS='true'
  else
    unset "${icon_dir}" "${warning_icon}"
    ICONS='false'
    return 1
  fi
}

# handle prerequisites. designed to exit if prerequisites aren't in
# place so that the script behaves more predictably.
prereqs() {
  # if needed dependencies aren't available, exit.
  check_deps <<'EOF'
apm
notify-send
EOF
  # if A/C is connected, exit.
  [ "$(apm -a)" = 1 ] && exit

  # if battery is missing, exit.
  batt_status="$(apm -b)"
  if [ "${batt_status}" = 4 ] || [ "${batt_status}" = 255 ]; then
    err 'Battery status is absent or unknown.'
  fi
}

# exporting ${DISPLAY} is needed for cron(8) jobs.
set_display() {
  [ -z "${DISPLAY}" ] && export DISPLAY=:0
}

# depending on whether ${ICONS} is 'true' or 'false', send a
# notification with ${message} as content with or without an appropriate
# icon.
warn_user() {
  message="Your device is at ${batt_percent}%!"
  case "${ICONS}" in
    'true') notify-send -i "${warning_icon}" "${message}" ;;
    'false') notify-send "${message}"                     ;;
  esac
}

# handle the prerequisites. determine battery percentage. if it's below
# 30%, then set ${DISPLAY}, set an icon (or not, if it isn't readable),
# and send the user a notification about the low battery. otherwise,
# exit silently.
main() {
  prereqs
  batt_percent="$(apm -l)"
  if [ "${batt_percent}" -lt 30 ]; then
    set_display
    choose_icon
    warn_user
  else
    exit
  fi
}

main
