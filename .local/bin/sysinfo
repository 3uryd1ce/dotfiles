set -e
. "${HOME}/.local/bin/libr"

# system statistics in a format suitable for lemonbar

# TODO
# figure out how to set a refresh timer appropriate for each function,
# rather than a global refresh timer

show_date() {
  date "+%a %m-%d %H:%M"
}

show_volume() {
  raw_volume=$(sndioctl -n output.level 2>/dev/null)
  # division is used to truncate the resulting floating-point number
  # side note: bc(1) needs a newline to work
  formatted_volume=$(printf "%s\\n" "${raw_volume} / 0.01" | bc)
  if [ "$(sndioctl -n output.mute 2>/dev/null)" = 1 ]; then
    printf "%s" "MUTE${delimiter}"
  else
    printf "%s" "vol: ${formatted_volume}%${delimiter}"
  fi
}

show_disk_space() {
  diskspace=$(df -h /home | awk '/dev/{print $4}')
  printf "%s" "/home: ${diskspace}${delimiter}"
}

show_battery() {
  adapter=$(apm -a)
  minutes=$(($(apm -m) % 60))
  hours=$(($(apm -m) / 60))
  remaining="~${hours}h & ${minutes}m"
  percentage="$(apm -l)%"
  case "${adapter}" in
    0)
      printf "%s" "bat: ${remaining}, at ${percentage}"
      ;;
    1)
      printf "%s" "chr: at ${percentage}"
      ;;
    2)
      printf "%s" "bkup: ${remaining}, at ${percentage}"
      ;;
    *)
      printf "%s" ""
      ;;
  esac
}

show_track() {
  song=$(mpc current)
  printf "%s" "${song:-}"
}

show_temp() {
  case "$(hostname -s)" in
    lain)
      temperature=$(sysctl -n hw.sensors.cpu0.temp0 \
        | awk -F "." '{print $1}')
      ;;
    aphrodite)
      temperature=$(sysctl -n hw.sensors.ksmn0.temp0 \
        | awk -F "." '{print $1}')
      ;;
    *)
      temperature=''
      ;;
  esac
  if [ -z "${temperature}" ]; then
    printf "%s" ""
  else
    printf "%s" "${delimiter}temp: ${temperature} Â°C"
  fi
}

show_cpu_freq() {
  raw_cpu_freq=$(sysctl -n hw.cpuspeed)
  formatted_cpu_freq=$(printf "%s\\n" "${raw_cpu_freq} * 0.001" | bc)
  printf "%s" "cpu: ${formatted_cpu_freq} GHz"
}

sysinfo_mpd() {
  while true; do
# spaces bork ${stats}
stats="${bgfg} %{l}$(show_battery)$(show_temp)\
%{c}$(show_track) %{r}$(show_volume)$(show_disk_space)\
$(show_date)"
    printf "%s" "${stats}"
    sleep 5
  done
}

sysinfo_no_mpd() {
  while true; do
# spaces bork ${stats}
stats="${bgfg} %{l}$(show_battery)$(show_temp)\
%{r}$(show_volume)$(show_disk_space)\
$(show_date)"
    printf "%s" "${stats}"
    sleep 5
  done
}

main() {
  import_colors || err "Unable to import colors."
  delimiter="  %{F${color3}}|%{F${foreground}}  "
  bgfg="%{B${background}} %{F${foreground}"
  if pgrep -q mpd; then
    sysinfo_mpd
  else
    sysinfo_no_mpd
  fi
}

main
