# wrapper script to disable core dumps
#
# currently there is an issue where mpv(1) reliably dumps a core on
# exit.
#
# see https://marc.info/?t=162020293900011&r=1&w=2
#
# also, disable xcompmgr(1) during playback since it seems to cause
# screen tearing with modesetting(4)


err() {
  printf '%s\n' "$*" >&2
  exit 1
}


usage() {
  err "${0##*/} [options] [media file]

See mpv(1) for more details."
}


[ -z "${DISPLAY}" ] && err "${0##*/} requires a graphical environment."

[ -z "$1" ] && usage


MPV="$(command -vp -- 'mpv')" || err 'mpv not found in PATH or not executable.'
OS="$(uname)"


# since the issues mentioned before only occur on OpenBSD, do an OS
# check and don't worry that it's not POSIX compatible since sh(1) on
# OpenBSD is secretly ksh(1).
#
# shellcheck disable=SC3045
[ "${OS}" = 'OpenBSD' ] && ulimit -c 0


case "${0##*/}" in

  'mpv')
    [ "${OS}" = 'OpenBSD' ] && pkill xcompmgr >/dev/null 2>&1

    "${MPV}" "$@"

    [ "${OS}" = 'OpenBSD' ] \
      && [ -x "$(command -v -- 'xcompmgr')" ] \
      && xcompmgr >/dev/null 2>&1 &

    ;;

  # workaround for screen tearing isn't needed if only playing audio
  'mpva')
    "${MPV}"               \
      --no-keep-open       \
      --no-resume-playback \
      --no-pause           \
      --no-video "$@"

    ;;

  *)
    err "${0##*/} is not an expected program name."

    ;;

esac
