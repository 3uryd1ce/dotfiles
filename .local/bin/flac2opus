set -e


err() {
  printf '%s\n' "$*" >&2
  exit 1
}


check_deps() {
  while read -r dependency; do

    if [ -x "$(command -v -- "${dependency}")" ]; then
      continue

    else
      err "${dependency} not found in PATH or not executable."

    fi

  done
}


check_deps <<'EOF'
opusenc
parallel
EOF

if ! parallel opusenc --bitrate 192 '{}' '{.}.opus' ::: ./*.flac; then
  err 'Unable to convert from FLAC to opus.'
fi
