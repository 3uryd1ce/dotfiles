#!/usr/bin/env sh
. "${HOME}/.cache/wal/colors.sh"

chosen=$(cut -d ';' -f1 "${HOME}/.local/share/emoji" "${HOME}/.local/share/fontawesome" \
  | dmenu -i -l 20 -fn "mono-22" -nb "${color0}" -nf "${color3}" -sb "${color0}" -sf "${color7}")

[ -z "${chosen}" ] && exit

c=$(printf "${chosen}" | sed "s/ .*//")
printf "${c}" | xclip -selection clipboard
