#!/usr/bin/env sh
. "${HOME}/.cache/wal/colors.sh"

CHOSEN=$(cut -d ';' -f1 "${HOME}/.local/share/emoji" \
  | dmenu -i -l 20 -fn "mono-22" -nb "${color0}" -nf "${color3}" -sb "${color0}" -sf "${color7}")

[ -z "${CHOSEN}" ] && exit

EMOJI=$(printf "${CHOSEN}" | sed "s/ .*//")
printf "${EMOJI}" | xclip -selection clipboard
